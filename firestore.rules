rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    /**
     * USERS
     * - Public read limited (optional)
     * - No client-side writes
     * - All writes via Express backend
     */
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }

    /**
     * MEDICAL CAMPS
     * - Public read access
     * - Writes ONLY via backend (admin)
     */
    match /medicalCamps/{medicalCampId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * REGISTRATIONS
     * - No client-side access
     * - Backend only
     */
    match /registrations/{registrationId} {
      allow read, write: if false;
    }

    /**
     * CONTACT MESSAGES
     * - No client-side access
     * - Backend only
     */
    match /contactMessages/{contactMessageId} {
      allow read, write: if false;
    }
  }
}
